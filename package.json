{
  "name": "@sentry/electron",
  "description": "Offical Sentry SDK for Electron",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "repository": "https://github.com/timfish/electron-sentry.git",
  "author": "Tim Fish",
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "preexample": "if [ ! -d \"dist\" ]; then npm run build; fi;",
    "example": "electron example",
    "lint": "tslint --config ./tslint.json src/**/*",
    "format": "prettier --config .prettierrc src/**/* --write",
    "pretest": "run-s clean build",
    "test": "cross-env TS_NODE_PROJECT=./tsconfig.test.json xvfb-maybe electron-mocha --require ts-node/register --timeout 3000 ./test/unit/**/*.ts",
    "pree2e": "run-s clean build",
    "e2e": "cross-env TS_NODE_PROJECT=./tsconfig.test.json xvfb-maybe mocha --require ts-node/register --timeout 30000 ./test/e2e/**/*.ts"
  },
  "dependencies": {
    "@sentry/browser": "0.4.0-beta.2",
    "@sentry/core": "0.4.0-beta.2",
    "@sentry/node": "0.4.0-beta.2",
    "form-data": "^2.3.2",
    "node-fetch": "^2.0.0",
    "util.promisify": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/form-data": "^2.2.1",
    "@types/mocha": "^2.2.48",
    "@types/node-fetch": "^1.6.7",
    "@types/webdriverio": "^4.8.8",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.1.3",
    "electron": "^1.8.0",
    "electron-mocha": "^5.0.0",
    "mocha": "^5.0.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "spectron": "^3.8.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-eslint-rules": "^5.0.0",
    "typescript": "^2.7.2",
    "vrsource-tslint-rules": "^5.8.0",
    "xvfb-maybe": "^0.2.1"
  }
}
